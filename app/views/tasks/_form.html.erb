<div class="row">
  <div class="col-xs-12">
    <div class="col-sm-offset-2 col-md-offset-2 col-lg-offset-3 col-xs-12 col-sm-8 col-md-8 col-lg-6">
      <%= form_for(tasks) do |f| %>
        <% if tasks.errors.any? %>
          <div id="error_explanation">
            <ul>
              <% tasks.errors.full_messages.each do |tasks| %>
                <li><%= tasks %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
      
        <div class="form-group">
          <%= f.label :status, 'ステイタス' %>
          <%= f.text_field :status, class: 'form-control' %>
        </div>
      
        <div class="form-group">
          <%= f.label :content, 'タスク' %>
          <%= f.text_field :content, class: 'form-control' %>
        </div>
      
        <%= f.submit '投稿', class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>